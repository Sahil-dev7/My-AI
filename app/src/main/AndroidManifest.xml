<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required Permissions -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" tools:targetApi="33" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/aarti_logo_ultimate_merge"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Aarti.NoActionBar"
        tools:targetApi="31">

        <!-- Splash Screen (Launcher) -->
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- App Screens -->
        <activity android:name=".MainActivity" android:exported="true" />
        <activity android:name=".LoginActivity" android:exported="true" />
        <activity android:name=".RegistrationActivity" android:exported="true" />
        <activity android:name=".WaterTrackerScreenActivity" android:exported="true" />
        <activity android:name=".SleepTrackerScreenActivity" android:exported="true" />

        <!-- Broadcast Receivers -->
        <receiver
            android:name=".WaterReminderReceiver"
            android:enabled="true"
            android:exported="true">
            <!-- Boot completed ke baad alarms reschedule karne ke liye -->
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".WaterAddReceiver"
            android:enabled="true"
            android:exported="true" />

    </application>
</manifest>